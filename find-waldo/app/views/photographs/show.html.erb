
<%=render partial: "users/new"%>

<div id="photograph-wrapper">
    <div class="choose-character-menu">

        <p>Which character did you find?</p>
        <%@photograph.characters.each do |character|%>
            <p class="option" id=<%=character.id%> onclick="isFound(this.id)" ><%=character.name%></p>
        <%end%>

    </div>
    <img src= <%= asset_path @photograph.title%> id="photograph">
    <div id="cover-photograph"></div>
</div>

<!--side-content-->
<div id="side-content">
    <% @photograph.characters.each do |character|%>
        <div class="character-photo-wrapper">
        <%= image_tag asset_path(character.getImageSrc()), class: "character-photo", id: character.name%>
        <div class="character-photo-name"><%=character.name%></div>
        </div>
    <%end%>
</div>
<!--always to create action-->

<%=form_for(@game.moves.build, remote: true) do |f|%>
    <input type="hidden" id="x" name="x" value="">
    <input type="hidden" id="y" name="y" value="">
    <input type="hidden" id="character_id" name="character_id" value="">
    <input type="hidden" id="photo_id" name="photo_id" value=<%=@photograph.id%>>
    <%= button_tag(type: "submit", id: "submitBtn", style: "display:none") do%>

  <%end%>
<%end%>

<div id="feedback"></div>

<div id="congrats-wrapper">
    <p>Congratulations!</p>
    <p>You found <%=@photograph.getCharacters()%> in</p>
    <p><span id="score"></span>.</p>
</div>